# auto disable bluetooth
exec bluetoothctl power off

# dunst
exec dunst &

# polkit agent
exec lxqt-policykit-agent &

#Pipewire
exec pipewire &
exec pipewire-pulse &
exec wireplumber &

# cursor theme
seat seat0 xcursor_theme "Breeze" 10
exec gsettings set org.gnome.desktop.interface cursor-theme "Breeze"

# waybar
exec --no-startup-id waybar &

# udiskie
exec udiskie &

# swaylock
exec swayidle -w timeout 300 "swaylock -c 2e3440" timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' before-sleep "swaylock -c 2e3440"
exec sway-audio-idle-inhibit 

# screenshot
bindsym Print exec --no-startup-id grim ~/Pictures/$(date +"%Y%m%d%H%M%S")_screenshot.png -q 100 && notify-send "Скриншот сделан"

# default volume
exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ 30%

# default brightness
exec --no-startup-id xbacklight -set 30

# touchpad
input type:touchpad {
    tap enabled
    natural_scroll enabled
}

# keyboard
input * {
    xkb_layout "us,ru"
    xkb_options "grp:alt_shift_toggle"
}

# wallpapers
set $wallpapers_path $HOME/Pictures/wallpapers
output * bg $(find $wallpapers_path -type f | shuf -n 1) fill

set $mod Mod4

# strawberry
for_window [app_id="Strawberry"] move to workspace 2

# pavucontrol
for_window [app_id="pavucontrol"] floating enable, resize set width 550 px height 600 px, move position cursor, move down 35

# gaps
gaps inner 6

